<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/markLayoutOneRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/foxy_transparent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewStudentMark"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="2"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewStudentMarkNote"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:text="TextView" />
    <ImageButton
        android:id="@+id/imageButtonDelMark"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/A"
        app:srcCompat="@android:drawable/ic_menu_delete"
        android:layout_gravity="center_vertical"/>

    <ImageButton
        android:id="@+id/imageButtonEditMark"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/A"
        app:srcCompat="@android:drawable/ic_menu_edit"
        android:layout_gravity="center_vertical"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
